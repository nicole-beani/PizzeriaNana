@model IEnumerable<PizzeriaNana.Models.Ordini>

@{
    ViewBag.Title = "Index";
}


@if (User.IsInRole("admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Clienti.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataOrdine)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Indirizzo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nota)
        </th>
        <th></th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Clienti.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataOrdine)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Indirizzo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nota)
            </td>
            @if (User.IsInRole("admin"))
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IdOrdine }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IdOrdine }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdOrdine })
                </td>
            }
            else { }
        </tr>
    }
</table>
@if (User.IsInRole("admin"))
{
    @Html.ActionLink("Continua con l'ordine", "Create", "DettaglioOrdini", new { area = "" }, new { @class = "nav-link" })
}